<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
           id="org.apache.cordova.plugin"
      version="0.1">

    <name>Cameratest</name>
    <description>Charader</description>
    <author>PF</author>
    <license>MIT</license>
    <keywords>cordova,camera</keywords>

<!--     <js-module src="www/CameraConstants.js" name="CustomCamera">
        <clobbers target="window.CustomCamera" />
    </js-module>

    <js-module src="www/CameraPopoverOptions.js" name="CameraPopoverOptions">
        <clobbers target="CameraPopoverOptions" />
    </js-module>
 -->

   <js-module src="www/SaveToPhotoAlbum.js" name="SaveToPhotoAlbum">
        <clobbers target="navigator.SaveToPhotoAlbum" />
    </js-module>
    
    <!-- 
   <engines>
        <engine name="cordova" version=">=3.1.0" />
    </engines> -->
      <platform name="ios">
        <js-module src="www/SaveToPhotoAlbum.js" name="SaveToPhotoAlbum">
            <clobbers target="SaveToPhotoAlbum" />
        </js-module>
        <!-- config file -->
        <config-file target="config.xml" parent="/*">
            <feature name="SaveToPhotoAlbum">
                <param name="ios-package" value="SaveToPhotoAlbum" />
            </feature>
        </config-file>

        <!-- core CustomCamera header and source files -->
        <header-file src="platforms/ios/SaveToPhotoAlbum.h" />
        <source-file src="platforms/ios/SaveToPhotoAlbum.m" />

    </platform>

    <!-- android -->
    <platform name="android">
        <js-module src="www/SaveToPhotoAlbum.js" name="SaveToPhotoAlbum">
          <clobbers target="SaveToPhotoAlbum" />
      </js-module>
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="SaveToPhotoAlbum">
                <param name="android-package" value="org.apache.cordova.plugin.SaveToPhotoAlbum"/>
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </config-file>
        
        <source-file src="platforms/android/SaveToPhotoAlbumPlugin.java" target-dir="src/org/apache/cordova/plugin" />
        

     </platform>

</plugin>
